
<% var odd = 0, tmpClassName, offsetclass; %>
<% for(var winery in public._data.index.winelist){ %>
	<% 
		++odd;
		if ( odd % 2 == 0) {
			tmpClassName = "even";
		}else{
			tmpClassName = "bg-gray";
		}
	%>
	<div class="wrapper <%= tmpClassName %>">
		<aside class="container">
			<div class="row justify-content-center">
				<div class="col-10 col-md-10 col-lg-8 col-xl-6 text-center">
				  	<a href="<%= public._data.index.winelist[winery].href %>"><img src="images/<%= public._data.index.winelist[winery].img %>" class="img-fluid my-30" alt="<%= winery %>" title="<%= winery %>"></a>
					
					<div class="row mb-40 text-left">
					<% for(var i = 0; i < public._data.index.winelist[winery].data.length; i++){ %>
						<% 
							if ( i % 2 == 0) {
								offsetclass = "";
							}else{
								offsetclass = "off";
							}
						%>
						<div class="col-12 col-md-6 winelistcontent">
							<div class="row no-gutters">
								<div class="col-2 col-md-2 points">
									<%= public._data.index.winelist[winery].data[i].points %>
								</div>
								<div class="col-8 col-md-8  col-lg-8">
									<h5><%= public._data.index.winelist[winery].data[i].winery %></h5>
									<p><%= public._data.index.winelist[winery].data[i].vintage %></p>
								</div>
							</div>
						</div>
				  	<% }; %>
				  	</div>
				</div>
			</div>
		</aside>
	</div>
<% }; %>
